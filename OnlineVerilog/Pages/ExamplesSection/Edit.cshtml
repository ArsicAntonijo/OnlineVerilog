@page
@model OnlineVerilog.Pages.ExamplesSection.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2 class="blueColor">Измене задатака</h2>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Example.Id" />
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Example.Section" class="control-label">Секција</label>
                    <input asp-for="Example.Section" class="form-control" />
                    <span asp-validation-for="Example.Section" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Example.Header" class="control-label">Наслов</label>
                    <input asp-for="Example.Header" class="form-control" />
                    <span asp-validation-for="Example.Header" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Example.Body" class="control-label">Опис</label>
                <textarea asp-for="Example.Body" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="Example.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Example.TestBench" class="control-label">Тестбенч</label>
                <textarea asp-for="Example.TestBench" class="form-control" rows="10" cols="50"></textarea>
                <span asp-validation-for="Example.TestBench" class="text-danger"></span>
            </div>
            <div class="form-group newExamplebutton">
                <input type="submit" value="Сачувај задатак" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <a asp-page="./List">Врати се на листи задатака</a>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
